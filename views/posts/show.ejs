<div class="post-detail">
    <article class="post-article">
        <!-- Hero Section with Image -->
        <div class="article-hero">
            <% if (post.image) { %>
                <img src="<%= post.image %>" alt="<%= post.title %>" class="article-hero-img">
            <% } else { %>
                <div class="featured-placeholder"><i class="fas fa-image"></i></div>
            <% } %>
            
            <span class="article-hero-tag"><%= post.category %></span>
            
            <div class="article-hero-overlay">
                <div class="article-hero-author">
                    <div class="author-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="author-info">
                        <div class="author-name"><%= post.author %></div>
                        <div class="article-hero-date"><%= post.formattedDate %></div>
                    </div>
                </div>
                <h1 class="article-hero-title"><%= post.title %></h1>
            </div>
        </div>
        
        <!-- Divider Line -->
        <div class="article-divider"></div>
        
        <!-- Article Content -->
        <div class="post-content-wrapper">
            <div class="post-content">
                <%- post.contentHtml || post.content.replace(/\n/g, '<br>') %>
            </div>
        </div>
        
        <div class="container">
            
            <div class="post-actions">
                <button class="btn btn-outline like-btn" data-post-id="<%= post._id %>">
                    <i class="fas fa-heart"></i>
                    Like Article (<span class="like-count"><%= post.likes %></span>)
                </button>
                <span class="stat">
                    <i class="fas fa-eye"></i>
                    <%= post.views %> views
                </span>
                <a href="/posts/<%= post._id %>/edit" class="btn btn-outline">
                    <i class="fas fa-edit"></i>
                    Edit
                </a>
                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="delete-form">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">
                        <i class="fas fa-trash"></i>
                        Delete
                    </button>
                </form>
            </div>
            
            <div class="post-navigation">
                <a href="/" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i>
                    Back to Home
                </a>
                <a href="/posts" class="btn btn-outline">
                    <i class="fas fa-list"></i>
                    All Posts
                </a>
            </div>
        </div>
    </article>
</div>
